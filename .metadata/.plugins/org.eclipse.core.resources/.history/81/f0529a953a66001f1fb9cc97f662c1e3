package list;

public class TesteCarrinhoDeCompras {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		CarrinhoDeCompra carrinho1 = new CarrinhoDeCompra();
		
		carrinho1.adicionarItem("item1", 2.00, 4);
		carrinho1.adicionarItem("item2", 5.00, 4);
		carrinho1.adicionarItem("item3", 8.00, 5);
		carrinho1.adicionarItem("item4", 3.20, 6);
		carrinho1.adicionarItem("item5", 1.10, 1);

		carrinho1.exibirItens();
		carrinho1.calcularValorTotal();
		
		carrinho1.removerItem("item3");
		carrinho1.exibirItens();
		carrinho1.calcularValorTotal();
		
	}

}
